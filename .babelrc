{
  "presets": [
    "stage-1",
    "react"
  ],
  "plugins": [
    "transform-decorators-legacy",
    ["module-resolver", {
      "root": ["./src"],
      "alias": {
        "noxt": "./.noxt/",
        "components": "./src/app/components",
        "hocs": "./src/app/hocs",
        "modules": "./src/app/modules",
        "pages": "./src/app/pages",
        "styles": "./src/app/styles",
        "utils": "./src/app/utils"
      }
    }]
  ],
  "env": {
    "development": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            },
            "modules": false,
            "loose": true
          }
        ]
      ],
      "plugins": [
        "lodash",
        "transform-react-constant-elements",
        "transform-react-remove-prop-types",
        "transform-react-pure-class-to-function"
      ]
    }
  }
}
